<p id="notice"><%= notice %></p>

<h1>Vaccines</h1>


<form method="GET" action="/vaccines">
  Nombre de vacuna: <input type="text" name="filter" />
  <input type="submit" />
</form>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Vacunas aplicadas</th>
      <th>Cantidad de enfermeras</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vaccines.each do |vaccine| %>
      <tr>
        <td><%= vaccine.name %></td>
        <td><%= link_to vaccine.vaccine_applications.count, vaccine_applications_path(:vaccine_id => vaccine.id) %></td>
        <td><%= link_to vaccine.nurses.distinct.count, nurses_path(:vaccine_id => vaccine.id) %></td>
        <td><%= link_to 'Show', vaccine %></td>
        <td><%= link_to 'Edit', edit_vaccine_path(vaccine) %></td>
        <td><%= link_to 'Destroy', vaccine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vaccine', new_vaccine_path %>
