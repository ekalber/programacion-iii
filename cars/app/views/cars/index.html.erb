<%= t('hello') %>

<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<form action="/cars" method="GET">
  Color: <input type="text" name="color" value="<%= @color %>" />
  Marca: 
  <select name="brand_id"> 
    <% Brand.all.each_with_index do | b, index | %>
      <%#= link_to b.name, cars_path(:brand_id => b.id) %> 
      <option value="<%= b.id %>" <%= b.id.to_s == @brand_id ? "selected" : "" %>><%= b.name %></option>
    <% end -%>
  </select>
  <input type="submit" />
</form>


<table>
  <thead>
    <tr>
      <th>Nro. puertas</th>
      <th>Color</th>
      <th>Modelo</th>
      <th>Año</th>
      <th>Marca</th>
      <th>Clasificación</th>
      <th>Estructura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.doors %></td>
        <td><%= car.color %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.brand.name unless car.brand.nil? %></td>
        <td><%= car.classification.name unless car.classification.nil? %></td>
        <td><%= car.structure.name unless car.structure.nil? %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
