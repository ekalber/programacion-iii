<p id="notice"><%= notice %></p>

<h1>Stations</h1>

<table>
  <thead>
    <tr>
      <th>Litros cargados</th>
      <th>Litros restantes</th>
      <th>Importe de descargas</th>
      <th>Address</th>
      <th>Flag</th>
      <th>Max liters</th>
      <th>Detalle descargas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.loaded_liters %> </td>
        <td><%= station.remaining_liters %></td>
        <td><%= number_to_currency(station.total_dischargues_amount) %></td>
        <td><%= station.address %></td>
        <td><%= station.flag %></td>
        <td><%= station.max_liters %></td>
        <td><%= link_to "Ver detalle", dischargues_path(:station_id => station.id) %></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Station', new_station_path %>
