<p id="notice"><%= notice %></p>

<h1>Specialities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Doctors</th>
      <th>Consults</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @specialities.each do |speciality| %>
      <tr>
        <td><%= speciality.name %></td>
        <td><%= link_to speciality.doctors.count, doctors_path(:speciality_id => speciality.id) %></td>
        <td>
          <% total = 0 %>
          <% speciality.doctors.each do |p| %>
            <% total = total + p.consults.count %>
          <% end %>
          <%= link_to total, consults_path(:speciality_id => speciality.id) %>
        </td>
        <td><%= link_to 'Show', speciality %></td>
        <td><%= link_to 'Edit', edit_speciality_path(speciality) %></td>
        <td><%= link_to 'Destroy', speciality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

